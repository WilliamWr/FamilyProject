<div class="posts">
  <p id="notice"><%= notice %></p>

<h1>Recent Posts</h1>

<table class="table table-inverse">
  <thead class="indentations">
  <div>
    <tr>

      <th>Title</th>
      <th>Description</th>
      <th>Image</th>

    </tr>

  </thead>
  <tbody>
    <% @posts.each do |post| %>

    <tr>

      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to image_tag(post.image.url(:large)), post.image.url %></td>

      <!-- <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
    </tr>

    <% end %>
  </tbody>
</table>
</div>

<span class="post_button"><%= link_to 'New Post', new_post_path %></span>
