<div class="posts">
  <p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>g
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Image</th>
      <th>user_id</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to image_tag(post.image.url(:med)), post.image.url %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
</div>
